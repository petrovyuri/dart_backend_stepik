{
    // Конфигурации запуска для отладки приложения
    "configurations": [
        {
            // Имя конфигурации, отображаемое в VS Code
            "name": "Launch (Stage)",
            // Тип отладчика - Dart
            "type": "dart",
            // Тип запуска - запуск новой программы
            "request": "launch",
            // Точка входа в приложение
            "program": "bin/server.dart",
            // Переменные окружения для запуска приложения
            "env": {
                "PORT": "9004",
                "IS_STAGE": "true",
                "DB_HOST": "localhost",
                "DB_NAME": "data",
                "DB_USER": "data",
                "DB_PASSWORD": "data",
                "DB_PORT": "9003"
            }
        }
    ]
}